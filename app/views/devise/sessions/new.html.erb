<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: flex;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

    .form-signin .checkbox {
        font-weight: 400;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }

    .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }

    .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center">
    <main class="form-signin">
      <form>
        <h1 class="h3 mb-3 fw-normal"><%= t 'log_in_title' %></h1>

        <div class="form-floating">
          <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: t('email') %>
          <%= f.label t('email'), for: 'floatingInput' %>
        </div>
        <div class="form-floating">
          <%= f.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: t('password') %>
          <%= f.label t('password'), for: 'floatingPassword' %>
        </div>

        <div class="checkbox mb-3 mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label t('remember_me') %>
        </div>
        <%= f.submit t('log_in'), class: 'w-100 btn btn-lg btn-primary' %>
      </form>
    </main>
  </div>
<% end %>
<%= render "devise/shared/links" %>
