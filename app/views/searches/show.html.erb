<h1>Tickets search</h1>

<%= form_tag result_search_path, method: :get do %>
  <div class="container mt-2 row-cols-6">
    <%= label_tag :from_station_id %>
    <%= select_tag :from_station_id, options_from_collection_for_select(@stations.all, :id, :title) %>
  </div>
  <div class="container mt-2 row-cols-6">
    <%= label_tag :to_station_id %>
    <%= select_tag :to_station_id, options_from_collection_for_select(@stations.all, :id, :title) %>
  </div>
  <div class="container mt-2 row-cols-3">
    <%= submit_tag :Search %>
  </div>
<% end %>