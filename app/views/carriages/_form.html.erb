<%= form_with(model: @carriage) do |form| %>
  <%= render 'common/error', resource: @carriage %>

  <div class="field">
    <%= form.label :train %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :kind %>
    <%= form.select :kind, Carriage.kinds.keys %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
